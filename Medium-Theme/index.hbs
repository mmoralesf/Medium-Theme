{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{!-- The big featured header --}}


<div class="mainheading {{#is "home"}} homecover {{/is}}" {{#is "home"}} {{#if @blog.cover_image}} style="background-image:url({{@blog.cover_image}});" {{/if}} {{/is}}> 
<h1 style="margin:0px" class="main-title"><span>{{@blog.title}}</span></h1>
<h3><span>{{@blog.description}}</span></h3></div>


{{!-- The main content area on the homepage --}}


{{!-- Featured Section --}}
{{#is "home"}}
<section class="featured-posts">
	<div class="section-title">
		<h2><span class="title">Destacadas</span></h2>
	</div>
	<div class="masonrygrid row listfeaturedtag">
		{{#get "posts" filter="featured:true" limit="4" as |featured|}}

		{{#foreach featured}}
				 {{!-- The tag below includes the markup for each post - partials/post-card-featured.hbs --}}
				 {{> "post-card-featured"}}
		 {{/foreach}}

		 {{/get}}
	</div>
</section>
{{/is}}

{{!-- All Stories Section --}}
<section class="recent-posts">
	<div class="section-title">
		<h2><span class="title">Publicaciones</span> {{pagination}} <div class="clearfix"></div></h2>
	</div>
	<div class="masonrygrid row listrecent">
		{{#foreach posts}}
				 {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
				 {{> "post-card"}}
		 {{/foreach}}
	<div class="clearfix"></div>
	</div>
	<div class="bottompagination">
		<div class="pointerup"><i class="fa fa-caret-up"></i></div>
		{{pagination}}
	</div>
</section>
{{> "explore"}}