{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{!-- The big featured header, it uses blog cover image as a BG if available --}}
{{#tag}}
<div class="mainheading {{#if feature_image}} homecover {{/if}}" {{#if feature_image}} style="background-image:url({{feature_image}});" {{/if}}>
		<h1 class="sitetitle"><span>{{name}}</span></h1>
		<p class="lead">
      <span>{{#if description}}
        {{description}}
    {{else}}
        Una colección  de {{plural ../pagination.total empty='posts' singular='% una publicación' plural='% publicaciones'}}
    {{/if}}
    </span>
    </p>
</div>
{{/tag}}

{{!-- All Stories Section --}}
<section class="recent-posts">
	<div class="section-title">
		<h2><span class="title">"{{#tag}}{{name}}{{/tag}}" Publicaciones</span> {{pagination}} <div class="clearfix"></div></h2>
	</div>
	<div class="masonrygrid row listrecent">
		{{#foreach posts}}
				 {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
				 {{> "post-card"}}
		 {{/foreach}}
	<div class="clearfix"></div>
	</div>
  <div class="bottompagination">
    <div class="pointerup"><i class="fa fa-caret-up"></i></div>
    {{pagination}}
  </div>
</section>
