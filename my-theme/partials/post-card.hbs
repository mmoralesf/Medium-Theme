<div class="col-md-4 grid-item">
  <div class="card {{post_class}}">
  <a href="{{url}}">
    <span class="wrapmaxheight">
        <img class="img-fluid img-thumb" src="{{feature_image}} {{#unless feature_image}} {{asset "img/tag-background.jpg"}} {{/unless}}" alt="{{title}}">
    </span>
  {{#unless feature_image}}<div class="nofeaturedimage">" {{excerpt words="28"}}...</div>{{/unless}}
  </a>
  <div class="card-block">
    <h2 class="card-title"><a href="{{url}}">{{title}}</a></h2>
    <h4 class="card-text">{{excerpt words="28"}}...</h4>
    <div class="metafooter">
      <div class="wrapfooter">
        <span class="meta-footer-thumb">
          {{#if author.profile_image}}
              <img class="author-thumb" src="{{author.profile_image}}" alt="{{author.name}}" />
          {{/if}}
        </span>
        <span class="author-meta">
        <span class="post-name"><a href="{{author.url}}">{{author}}</a></span><br/>
        <span class="post-date"><time class="post-date" datetime="{{date format='YYYY-MM-DD'}}"> {{date format="DD MMMM YYYY"}}  </time> </span><span class="dot"></span><span>{{tags}}</span>
